/** pagination **/

.pagination 
  display flex
  flex-direction row
  justify-content center
  list-style none
  white-space nowrap
  width 100%
  padding-top 2em
  a,span
    -webkit-font-smoothing antialiased
    font-size 16px
    font-family: $basic-font-family    
    color #bfbfbf
    letter-spacing 0.1em
    font-weight 700
    padding 5px 5px
    text-decoration none
    transition 0.3s
  
  .page-number
    padding-bottom 3px
    margin 0 20px
    box-sizing border-box
    position relative
    display inline
    &.disabled 
      display none
    
    &:hover a 
      color  $pagination-link-active-color    

    &:before,
    &:after 
      position absolute
      content ""
      width 0
      height 1px
      background $pagination-link-active-color
      transition 0.3s
      bottom 0px
    
    &:before .current,
    &:after .current
      width 100%
    
    &:before 
      left 50%
    
    &:after 
      right 50%
    
    &:hover 
      &:before,
      &:after 
        width 50%
      
    
    &.current
      color $pagination-link-active-color
      
      &:before,
      &:after 
        width 60%
      
    
  
