.header-title
  font-family: hamburger-heaven
  font-size: 6em;
  font-weight: normal;
  // margin-top: 3rem;
  color: $font-color;
  text-decoration: none;
  transition: none;

.header-title:hover
  color: $font-color;
  text-decoration: none;
  transition: none;  
  
.navbar .menu a
  padding 0 8px

.navbar .menu .active
  font-weight 900
  color $navbar-active-color

.navbar-header a:hover, .navbar .menu a:hover
  background-color transparent

header label
  margin-left 15px
  position relative
  -webkit-transform translateY(.1em) translateX(.5em)
